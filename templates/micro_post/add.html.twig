{% extends 'base.html.twig' %}

{% block title %}Create New Post{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div>{{ form_errors(form) }}</div>
        <div>{{ form_label(form.title, 'Please enter the title') }}</div>
        <div>{{ form_widget(form.title, {'attr': {'style': 'color: green'}}) }}</div>
        <div>{{ form_label(form.text, 'Please enter the text') }}</div>
        <div>{{ form_widget(form.text) }}</div>

        <button type="submit"></button>
    {{ form_end(form) }}
{% endblock %}
